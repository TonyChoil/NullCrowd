<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.teamtwo.nullfunding.pm.dao.MessageMapper">

    <resultMap id="CheckMessageResultMap" type="MessageDTO">
        <id property="messageNo" column="MESSAGE_CODE"/>
        <id property="box" column="BOX_TYPE"/>
        <id property="receiverNo" column="MEM_CODE"/>
        <id property="title" column="TITLE"/>
        <id property="receivedTime" column="RECEIVED_TIME"/>
        <id property="senderNickname" column="SENTBY"/>
        <id property="content" column="CONTENT"/>
        <id property="isRead" column="IS_READ"/>
        <id property="isDeleted" column="IS_DELETED"/>
    </resultMap>


    <select id="checkTotalMessages" resultType="_int" parameterType="hashmap">
        SELECT
            COUNT(*)
          FROM MESSAGES
         WHERE MEM_CODE = #{ selectedMemberNo }
           AND BOX_TYPE = #{ selectedMessageboxNo }
    </select>

    <select id="viewAllMessageList" resultMap="CheckMessageResultMap">
        SELECT
              MESSAGE_CODE,
              BOX_TYPE,
              MEM_CODE,
              TITLE,
              RECEIVED_TIME,
              SENTBY,
              CONTENT,
              IS_READ,
              IS_DELETED
         FROM MESSAGES
        WHERE MEM_CODE = #{ selectedMemberNo }
          AND BOX_TYPE = #{ selectedMessageboxNo }
     ORDER BY MESSAGE_CODE DESC
       OFFSET #{ startRow } ROWS FETCH FIRST #{ limit } ROWS ONLY;
    </select>




</mapper>